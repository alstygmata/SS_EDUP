@model IEnumerable<SS_EDUP.Core.DTO_s.CourseDto>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-3">
            <ul class="nav flex-column">
                @foreach (var category in @ViewBag.ListCategories)
                {
                <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" asp-route-category_id="@category.Id">@category.Name</a>
                </li>
                }
            </ul>
        </div>
        <div class="col-9">
            <div class="container">
                <div class="row">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Category</a></li>
                            <li class="breadcrumb-item active" aria-current="page">All</li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-12 mt-4">
                                     
                        <div class="card mb-4">
                            <div class="card-body p-3">
                                <div class="row">
                                     @foreach(var course in Model){
                                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                                        <div class="card card-blog card-plain">
                                            <div class="position-relative">
                                                <a class="d-block shadow-xl border-radius-xl">
                                                        <img src="@course.ImagePath" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                                                </a>
                                            </div>
                                            <div class="card-body px-1 pb-0">
                                                    <p class="text-gradient text-dark mb-2 text-sm">@course.CategoryName</p>
                                                <a href="javascript:;">
                                                    <h5>
                                                            @course.Title
                                                    </h5>
                                                </a>
                                                <p class="mb-4 text-sm">
                                                        @course.Description
                                                </p>
                                                    <p class="mb-4 text-sm">
                                                        @course.Price UAH
                                                    </p>
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <button type="button" class="btn btn-outline-primary btn-sm mb-0">Start Course</button>
                                                        <div class="avatar-group mt-2">
                                                            <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Elena Morison">
                                                                <img alt="Image placeholder" src="../assets/img/team-1.jpg">
                                                            </a>
                                                            
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
                <div class="row m-3">
                    <nav aria-label="...">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">Prev</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">2</span>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            
        </div>
        
    </div>
</div>